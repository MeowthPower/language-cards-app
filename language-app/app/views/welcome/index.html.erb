<div id= "m_btn" class="ui pointing menu inverted fluid three item">
  <div class="ui labeled icon button black">
   <i class="fa fa-list fa-lg"></i>
   Menu
  </div>
</div>
<div id="banner">
  <h2 class="ui center aligned icon header">
    <i class="circular fa fa-globe fa-5x"></i><br />
    TranslateMe
  </h2>
</div>
<div id="table-option">
  <div id= "option" class="ui menu fluid two item">
    <a href="#recents" class="item">
      <i class="fa fa-sort fa-lg"></i>Recents
    </a>
    <a href="#categories" class="item">
      <i class="fa fa-calendar-o fa-lg"></i>Categories
    </a>
  </div>
</div>
<div id="card_table">
  <table class="ui table segment two column">
    <thead>
      <tr>
        <th>English Phrase</th>
        <th>Explanation</th>
      </tr>
    </thead>
    <tbody>
        <script type="text/template" data-template="card-template">
          <td>{{english_phrase}}</td>
          <td><a href="#{{id}}">{{explanation}}</a></td>
        </script>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          <div class="ui green button" data-action="new-card-form"><i class="fa fa-user fa-">
            </i>Add Card
          </div>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

<script type="text/template" data-template="new-card-form">
  <div class="header">
    New Card Form
  </div>
  <div class="content">
    <form class="ui form">
      <h4 class="ui dividing header">Card Template</h4>
      <div class="ui required field">
        <label>English Phrase</label>
        <input type="text" name="english_phrase">
      </div>
      <div class="ui required field">
        <label>Description</label>
        <input type="text" name="explanation"> 
      </div>
      <div class="ui field">
        <label>Tags</label>
        <input type="text" name="description"> 
      </div>
    </form>
  </div>
  <div class="actions">
    <div class="ui negative button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Add Card
      <i class="checkmark icon"></i>
    </div>
  </div>
</script>
